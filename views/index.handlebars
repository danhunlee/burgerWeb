<div class="container text-center" id="header">
  <h1>Eat-Da-Burger!</h1>
</div>
<div class="container rounded-bottom" id="burgerContainer">
  <div class="row">
    {{!-- Burgers to devour --}}
    <div class="col-4">
      {{!-- <h5>Burgers that I will devour!</h5> --}}
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </div>
    {{!-- Burger Image --}}
    <div class="col-4">
      <img src="assets/img/burger.png" id="burger" alt="Big Burger">
    </div>
    {{!-- Burgers devoured --}}
    <div class="col-4" id="burgersDevoured">
      {{!-- <h5>Burgers that I've devoured!</h5> --}}
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devour=false}}
        {{/if}}
      {{/each}}
    </div>
  </div>
  {{!-- Add new burger --}}
  <div class="row">
    <div class="col-12 text-center">
      {{!-- <h2>Add a Burger</h2> --}}
      <form class="create-form">

        <div class="form-group">
          {{!-- <label for="newBurger">Burger Name:</label> --}}
          <input type="text" id="newBurger" name="name">
          <button type="submit" align="right">Submit</button>
        </div>
        
      </form>
    </div>
  </div>

</div>